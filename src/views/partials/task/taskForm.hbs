<div class="card card-body p-4 rounded-0 bg-dark text-white">

  <h3>Add a task</h3>

  <form action="/task/add" method="POST">

    <div>
      <label for="title">Escribe un título</label>
      <input type="text" name="title" placeholder="Title" id="title"
        class="form-control rounded-0 bg-dark text-white" />
    </div>
    <div>
      <label for="description">Descripción</label>
      <textarea name="description" placeholder="Description" id="description"
        class="form-control rounded-0 bg-dark text-white"></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-2">Agregar</button>

  </form>
</div>